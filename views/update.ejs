<html lang="en">
  <%- include("./partials/head.ejs") %>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
    crossorigin="anonymous"
  />
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
    crossorigin="anonymous"
  ></script>

  <body class="container" style="margin-top: 2em">

    <form action="/api/notices/<%= notice._id %>?_method=PUT" method="POST">
      <div
        class="rounded-pill"
        style="
          padding-top: 2.5em;
          margin-top: 1em;
          margin-bottom: 4em;
          padding-right: 6em;
          padding-left: 6em;
          background-color: #f5f8ff;
        "
      >
        <div class="form-outline mb-4 ">
          <label class="form-label" for="title">Notice title:</label>
          <input
            type="text"
            id="title"
            class="form-control"
            name="title"
            required
            value="<%= notice.title %>"
          />
        </div>

        <div class="form-outline mb-4 ">
          <label class="form-label" for="name">Orgaisation name:</label>
          <input
            type="text"
            id="name"
            name="name"
            required
            value="<%=notice.name%>"
            class="form-control"
          />
        </div>

        <!-- Message input -->
        <div class="form-outline mb-4">
          <label class="form-label" for="body" >Notice body:</label>
          <textarea
            class="form-control"
            id="body"
            name="body"
            required
            rows="4"
          >
<%=notice.body%></textarea
          >
        </div>

        <!-- Submit button -->
        <button type="submit" class="btn btn-primary btn-block mb-4">
          Update
        </button>
      </div>
    </form>
  </body>
</html>
